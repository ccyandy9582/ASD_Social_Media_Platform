<%- include('header', {title:"ASD_Com", logined:false}) -%>
    <link rel="stylesheet" href="/stylesheets/signup.css">

    <div class="container" style="padding-top: 68px;">
        <div class="row">
            <div class="col-lg-10 col-xl-9 mx-auto">
                <div class="card card-signin flex-row my-5">
                    <div class="card-img-left d-none d-md-flex" id="signup_image">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title text-center">
                            註冊
                            <div class="font-weight-light text-primary" align="right" style="font-size: small">步驟 1/2
                            </div>
                        </h5>
                        <% if (typeof message != 'undefined') { %>
                            <% message.forEach((err)=>{ %>
                                <div class="alert alert-warning alert dismissible fade show" role="alert">
                                    <%= err.msg %>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            <% }) %> 
                        <% } %>
                        <form class="form-signin" method="post">
                            <div class="form-label-group">
                                <input type="text" id="inputUserame" name="username" class="form-control"
                                    placeholder="用戶名稱" required autofocus>
                                <label for="inputUserame">用戶名稱</label>
                            </div>

                            <div class="form-label-group">
                                <input type="email" id="inputEmail" name="email" class="form-control" placeholder="電郵地址"
                                    required>
                                <label for="inputEmail">電郵地址</label>
                            </div>

                            <hr>

                            <div class="form-label-group">
                                <input type="password" id="inputPassword" name="pw" class="form-control"
                                    placeholder="密碼" required>
                                <label for="inputPassword">密碼</label>
                            </div>

                            <div class="form-label-group">
                                <input type="password" id="inputConfirmPassword" name="firmPW" class="form-control"
                                    placeholder="確認密碼" required>
                                <label for="inputConfirmPassword">確認密碼</label>
                            </div>

                            <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">註冊</button>
                            <a class="d-block text-center mt-2 small" href="/login">登入</a>
                            <hr class="my-4">
                            <button class="btn btn-lg btn-google btn-block text-uppercase" type="submit" disabled><i
                                    class="fab fa-google mr-2"></i> 即將啟用... GOOGLE 註冊</button>
                            <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit" disabled><i
                                    class="fab fa-facebook-f mr-2"></i> 即將啟用... FACEBOOK 註冊</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('footer') -%>