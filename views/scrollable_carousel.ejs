<link rel="stylesheet" href="stylesheets/carousel.css">
<script src="javascripts/carousel-remote.js"></script>

<div class="container text-center" style="margin-top: 50px;">
    <div class="container-fluid my-3" align="center">
        <div id="carousel-example" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner row w-100" role="listbox" style="padding: 0">
                <% for(var i=0;i<activities.length;i++){ %>
                    <%if(i==0){%>
                        <div class="carousel-item col-12 col-sm-6 col-md-4 col-lg-3 active">
                            <div class="card" style="width:250px; height: 450px; border: none">
                                <img class="card-img-top" src="<%= activities[i].img %>" alt="Card image" width="250px" height="200px"/>
                                <div class="card-body">
                                    <h4 class="card-title"><%=activities[i].title%></h4>
                                    <p class="card-text"><%=activities[i].desc%></p>
                                </div>
                                <div class="card-footer bg-white">
                                    <%var link = "/activities/event/"+activities[i].eventID%>
                                    <a href=<%=link%> class="btn btn-primary">更多...</a>
                                </div>
                            </div>
                        </div>
                    <%}else{%>
                        <div class="carousel-item col-12 col-sm-6 col-md-4 col-lg-3">
                            <div class="card" style="width:250px; height: 450px; border: none;">
                                <img class="card-img-top" src="<%= activities[i].img %>" alt="Card image" width="250px" height="200px"/>
                                <div class="card-body">
                                    <h4 class="card-title"><%=activities[i].title%></h4>
                                    <p class="card-text"><%=activities[i].desc%></p>
                                    <%var link = "/activities/event/"+activities[i].activity_id%>
                                </div>
                                <div class="card-footer bg-white">
                                    <a href=<%=link%> class="btn btn-primary">更多...</a>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% } %>
            </div>
            <a class="carousel-control-prev" href="#carousel-example" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="false"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel-example" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true" style="border-radius: 50%"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
