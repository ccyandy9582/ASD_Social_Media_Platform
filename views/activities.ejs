<%- include('header', {title:"ASD_Com", logined:logined}) -%>

<div class="container" style="margin-top: 150px;">
    <div class="row">
        <div class="col">
            <div class="input-group mb-4 border rounded-pill p-1">
                <div class="input-group-prepend border-0">
                  <button id="button-addon4" type="button" class="btn btn-link text-info"><i class="fa fa-search"></i></button>
                </div>
                <input type="search" placeholder="搜尋" aria-describedby="button-addon4" class="form-control bg-none border-0">
              </div>
        </div>
        <div class="col">
            <select class="form-control" style="margin-top: 5px;">
                <option selected="selected">名稱</option>
                <option>日期</option>
                <option>地點</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <%for(var i=0;i<my_list.length;i++) {%>
                <ul class="list-group shadow my-3">
                    <li class="list-group-item">
                        <div class="media align-items-lg-center flex-column flex-lg-row p-3">
                            <div class="media-body order-2 order-lg-1">
                                <h5 class="mt-0 font-weight-bold mb-2" id="activity_title"><%=my_list[i].title%></h5>
                                <p class="font-italic text-muted mb-0 small"><%=my_list[i].desc%></p>
                                <div class="d-flex align-items-center justify-content-between mt-1">
                                    <h6 class="font-weight-bold my-2">
                                        <%var link = "/activities/event/"+my_list[i].eventID%>
                                        <a href=<%=link%> class="btn btn-primary">更多...</a>
                                    </h6>
                                </div>
                            </div><img src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fwww.nfsa.gov.au%2Fsites%2Fdefault%2Ffiles%2Farticle%2Fhero_image12-2018%2Fhero_bbq_article.jpg&f=1&nofb=1"<%#my_list[i].url%> alt="活動圖片" width="200" class="ml-lg-5 order-1 order-lg-2">
                        </div>
                    </li>
                </ul>
            <%}%>
        </div>
    </div>
</div>

<%- include('footer') -%>
