<%- include('header', {title:"ASD_Com", logined: logined}) -%>

    <div class="container" style="margin-top: 100px;" align="center">
        <div class="row" style="font-size: 2rem;">
            <div class="col-8">
                <table style="font-size: 1.5rem;">
                    <tr>
                        <td>
                            你的名字：
                        </td>
                        <td>
                            <%= user.user_name %> 
                        </td>
                    </tr>
                    <tr>
                        <td>
                            你的電郵電址：
                        </td>
                        <td>
                            <%= user.email %> 
                        </td>
                    </tr>
                    <tr>
                        <td>
                            你的興趣：
                        </td>
                        <td>
                            <% user.hobbies.forEach((hobby, index) => { %>
                                <% if (index==user.length-1) { %>
                                    <%= hobby.hobby %>
                                <% } else { %>
                                    <%= hobby.hobby %>,
                                <% } %>
                            <% }) %>
                        </td>
                    </tr>
                    <tr>
                        <td>你的身份：</td>
                        <td><%= user.identify %> </td>
                    </tr>
                </table>
            </div>
            <div class="col-4">
                <img src="http://www.newdesignfile.com/postpic/2009/03/person-icon_88181.png" alt="">
            </div>
        </div>
        <div class="row my-3">
            <div class="col">
                <h2>你的朋友</h2>
            </div>
        </div>
        <div class="row bg-light py-2">
                <% user.friends.forEach(friend => { %>
                    <div class="col-4">
                        <div class="card" style="width: 12rem; height: 18rem;">
                            <img class="card-img-top pd-1"
                                src="<%= friend.img_url %>" width="100%"
                                height="100%" style="padding: 10px; max-height: 12rem;">
                            <div class="card-body" align="center">
                                <p class="card-text"><%= friend.user_name %></p>
                            </div>
                        </div>     
                    </div>
                <% }) %>
        </div>
        <hr class="my-3">
        <div class="row my-3">
            <div class="col">
                <h2>你曾參加過的活動</h2>
            </div>
        </div>
        <div class="row bg-light py-2">
            <% user.activities.forEach(activity => { %>
                <div class="col-4">
                    <div class="card" style="width: 12rem; height: 18rem;">
                        <img class="card-img-top pd-1"
                            src="<%= activity.img %>"
                            width="100%" height="100%" style="padding: 10px; max-height: 12rem;">
                        <div class="card-body" align="center">
                            <p class="card-text"><%= activity.activity_name %></p>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>


    <%- include('footer') -%>